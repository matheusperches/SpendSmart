@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4 text-center">
    <h1 class="display-4">Manage your expenses</h1>
    <hr/>

    <div class="row justify-content-center mt-3">
        <!-- Code input and action section -->
        <div class="col-md-8">
            <form class="d-flex justify-content-center align-items-center flex-wrap" method="post">
                <label for="codeInput" class="form-label me-2">Enter Code:</label>
                <input type="text"
                       id="codeInput"
                       name="codeValue"
                       placeholder="Enter your code"
                       class="form-control me-2"
                       style="max-width: 250px;" />
                <button formaction="/Expenses" formmethod="get" type="submit" class="btn btn-success me-2">Submit</button>
                <button formaction="/Code/CreateCode" formmethod="post" type="submit" class="btn btn-primary">Generate New Code</button>
            </form>
        </div>
    </div>



    @if (TempData["GeneratedCode"] != null)
    {
        <div class="mt-3">
            <h3>Your new code: </h3>
            <p class="alert alert-success"><strong>@TempData["GeneratedCode"]</strong></p>
            <h4> Store it safely. </h4>
            </div>
    }
</div>